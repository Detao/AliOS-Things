menu "BSP         Configuration"
choice
    prompt "Board Selection"

source "board/developerkit/Config.in"
if AOS_BOARD_DEVELOPERKIT
    config AOS_BUILD_BOARD
        default "developerkit"

    source "platform/mcu/stm32l4xx_cube/Config.in"
    source "platform/arch/arm/armv7m/Config.in"
endif


source "board/esp32devkitc/Config.in"
if AOS_BOARD_ESP32DEVKITC
    config AOS_BUILD_BOARD
        default "esp32devkitc"

    source "platform/mcu/esp32/Config.in"
    source "platform/arch/xtensa/lx6/Config.in"
endif

source "board/esp32sram/Config.in"
if AOS_BOARD_ESP32SRAM
    config AOS_BUILD_BOARD
        default "esp32sram"

    source "platform/mcu/esp32/Config.in"
    source "platform/arch/xtensa/lx6/Config.in"
endif

source "board/esp8266/Config.in"
if AOS_BOARD_ESP8266
    config AOS_BUILD_BOARD
        default "esp8266"

    source "platform/mcu/esp8266/Config.in"
    source "platform/arch/xtensa/lx106/Config.in"
endif

source "board/linuxhost/Config.in"
if AOS_BOARD_LINUXHOST
    config AOS_BUILD_BOARD
        default "linuxhost"

    source "platform/mcu/linux/Config.in"
    source "platform/arch/linux/Config.in"
endif

source "board/mk3060/Config.in"
if AOS_BOARD_MK3060
    config AOS_BUILD_BOARD
        default "mk3060"

    source "platform/mcu/moc108/Config.in"
    source "platform/arch/arm/armv5/Config.in"
endif


source "board/stm32f103rb-nucleo/Config.in"
if AOS_BOARD_STM32F103RB_NUCLEO
    config AOS_BUILD_BOARD
        default "stm32f103rb-nucleo"

    source "platform/mcu/stm32f1xx/Config.in"
    source "platform/arch/arm/armv7m/Config.in"
endif



source "board/stm32f429zi-nucleo/Config.in"
if AOS_BOARD_STM32F429ZI_NUCLEO
    config AOS_BUILD_BOARD
        default "stm32f429zi-nucleo"

    source "platform/mcu/stm32f4xx_cube/Config.in"
    source "platform/arch/arm/armv7m/Config.in"
endif

source "board/stm32f103ze-alientek/Config.in"
if AOS_BOARD_STM32F103ZE_ALIENTEK
    config AOS_BUILD_BOARD
        default "stm32f103ze-alientek"
    
    source "platform/mcu/stm32f1xx/Config.in"
    source "platform/arch/arm/armv7m/Config.in"
endif

endchoice

endmenu
